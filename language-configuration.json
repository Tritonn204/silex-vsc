{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "<", "close": ">" }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "<", "close": ">" }
  ],
  "indentationRules": {
    "increaseIndentPattern": "(\\b(if|else|fn|for|while|let|struct|enum|entry)\\b.*\\{[^}\"']*$)|(^\\s*\\{[^}\"']*$)",
    "decreaseIndentPattern": "^\\s*\\}"
  },
  "folding": {
    "offSide": false,
    "markers": {
      "start": "^\\s*(fn|entry|struct|enum)\\b.*\\{",
      "end": "^\\s*\\}"
    }
  }
}
